# Smart Tourism Management System - Environment Variables Template
# Copiar este archivo como .env y configurar con valores reales

# =============================================================================
# API KEYS - Configurar con claves reales para funcionalidad completa
# =============================================================================

# Claude API (Anthropic) - Para análisis avanzado de IA
# Obtener en: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# TripAdvisor API - Para datos de valoraciones y rankings
# Obtener en: https://developer-tripadvisor.com/
TRIPADVISOR_API_KEY=your_tripadvisor_api_key_here

# OpenAI API - Alternativa para análisis de IA
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite local (por defecto)
DATABASE_URL=sqlite:///data/tourism_data.db

# PostgreSQL (opcional, para producción)
# DATABASE_URL=postgresql://user:password@localhost:5432/atourism_db

# MySQL (opcional)
# DATABASE_URL=mysql://user:password@localhost:3306/atourism_db

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Host del dashboard (0.0.0.0 para acceso externo, 127.0.0.1 para solo local)
DASHBOARD_HOST=0.0.0.0

# Puerto del dashboard
DASHBOARD_PORT=8050

# Modo debug (True para desarrollo, False para producción)
DASHBOARD_DEBUG=False

# Intervalo de actualización automática (segundos)
DASHBOARD_UPDATE_INTERVAL=300

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log principal
LOG_FILE=logs/atourism_system.log

# Habilitar recolección automática de datos
ENABLE_AUTO_COLLECTION=True

# Habilitar análisis de IA
ENABLE_AI_ANALYSIS=True

# Habilitar análisis PLS-SEM
ENABLE_PLS_ANALYSIS=True

# =============================================================================
# DATA COLLECTION FREQUENCIES
# =============================================================================

# Frecuencia de recolección de datos (segundos)
DATA_COLLECTOR_FREQUENCY=3600

# Frecuencia de análisis de IA (segundos)  
AI_ANALYSIS_FREQUENCY=7200

# Frecuencia de análisis PLS-SEM (segundos)
PLS_ANALYSIS_FREQUENCY=86400

# Frecuencia de generación de reportes (segundos)
REPORTING_FREQUENCY=86400

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Habilitar cache del sistema
ENABLE_CACHE=True

# Directorio de cache
CACHE_DIR=cache

# Tiempo de vida del cache (horas)
CACHE_TTL_HOURS=24

# Tamaño máximo del cache (MB)
CACHE_MAX_SIZE_MB=500

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Número de trabajadores para procesamiento paralelo
MAX_WORKERS=4

# Tamaño de batch para procesamiento de datos
BATCH_SIZE=1000

# Timeout para requests HTTP (segundos)
HTTP_TIMEOUT=30

# Número máximo de reintentos para APIs
MAX_API_RETRIES=3

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Clave secreta para encriptación (generar aleatoriamente)
SECRET_KEY=your_secret_key_here_generate_random_string

# Token de autenticación para APIs internas
AUTH_TOKEN=your_auth_token_here

# Habilitar HTTPS para dashboard (requiere certificados)
ENABLE_HTTPS=False

# Rutas de certificados SSL (si ENABLE_HTTPS=True)
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email para notificaciones de sistema
ADMIN_EMAIL=admin@example.com

# Configuración SMTP para envío de emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=True

# Webhook para notificaciones (Slack, Teams, etc.)
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# REGIONAL CONFIGURATION
# =============================================================================

# Regiones principales para análisis (separadas por comas)
PRIMARY_REGIONS=Andalucía,Cataluña,Madrid,Valencia,Canarias

# Zona horaria del sistema
TIMEZONE=Europe/Madrid

# Idioma por defecto
DEFAULT_LANGUAGE=es

# Formato de fecha por defecto
DATE_FORMAT=%Y-%m-%d

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Habilitar backups automáticos
ENABLE_AUTO_BACKUP=True

# Directorio de backups
BACKUP_DIR=backups

# Frecuencia de backup (horas)
BACKUP_FREQUENCY_HOURS=24

# Número de backups a mantener
BACKUP_RETENTION_COUNT=7

# Comprimir backups
BACKUP_COMPRESS=True

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Habilitar monitoreo del sistema
ENABLE_MONITORING=True

# Umbral de uso de CPU para alertas (%)
CPU_ALERT_THRESHOLD=80

# Umbral de uso de memoria para alertas (%)
MEMORY_ALERT_THRESHOLD=85

# Umbral de uso de disco para alertas (%)
DISK_ALERT_THRESHOLD=90

# Umbral de confianza mínima para análisis IA
MIN_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Modo desarrollo (habilita funciones adicionales de debug)
DEVELOPMENT_MODE=False

# Generar datos sintéticos si no hay datos reales
GENERATE_SYNTHETIC_DATA=True

# Número de registros sintéticos a generar por región
SYNTHETIC_DATA_RECORDS=100

# Simular latencia de APIs (milisegundos, solo en desarrollo)
SIMULATE_API_LATENCY=0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Habilitar funcionalidades experimentales
ENABLE_EXPERIMENTAL_FEATURES=False

# Habilitar análisis de sentimientos en reviews
ENABLE_SENTIMENT_ANALYSIS=False

# Habilitar predicciones con machine learning
ENABLE_ML_PREDICTIONS=False

# Habilitar análisis geoespacial
ENABLE_GIS_ANALYSIS=False

# Habilitar integración con redes sociales
ENABLE_SOCIAL_MEDIA_INTEGRATION=False

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# URL base para servicios del INE
INE_BASE_URL=https://servicios.ine.es/wstempus/js/ES/DATOS_TABLA/

# URL base para servicios de Exceltur
EXCELTUR_BASE_URL=https://www.exceltur.org/observatorio-monitur/

# Rate limits para APIs externas (requests por minuto)
INE_RATE_LIMIT=60
TRIPADVISOR_RATE_LIMIT=100
EXCELTUR_RATE_LIMIT=30

# User agent para requests HTTP
USER_AGENT=SmartTourismSystem/1.0 (https://github.com/your-repo/atourism)

# =============================================================================
# NOTES FOR CONFIGURATION
# =============================================================================

# 1. Generar SECRET_KEY aleatoria:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"

# 2. Para obtener API keys:
#    - Claude: https://console.anthropic.com/
#    - TripAdvisor: https://developer-tripadvisor.com/
#    - OpenAI: https://platform.openai.com/api-keys

# 3. Para configuración de producción:
#    - Cambiar DASHBOARD_DEBUG=False
#    - Configurar HTTPS si es necesario
#    - Ajustar niveles de log a WARNING o ERROR
#    - Configurar backup automático

# 4. Para desarrollo:
#    - DASHBOARD_DEBUG=True
#    - LOG_LEVEL=DEBUG
#    - GENERATE_SYNTHETIC_DATA=True

# 5. Configuración de email opcional pero recomendada para alertas
